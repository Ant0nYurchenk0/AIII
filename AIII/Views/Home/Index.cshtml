@model AIII.ViewModels.HomeMovies

@if (Model.PopularMovies.Count != 0)
{
    <div class="left">

        @using (Html.BeginForm("GetByTag", "Search"))
        {
            <input type="hidden" value="popMov" name="tag" />

            <input type="hidden" value="true" name="newRequest" />
            <button class="btn">
                <h3 class="title">Popular Movies</h3>
            </button>
        }
    </div>
    <div class="scrollmenu">
        @foreach (var item in Model.PopularMovies)
        {
            <a href="@Url.Action("GetMovie", "Imdb", new { id=item.Id})">
                <div class="card border-secondary mb-3" style="max-width: 20rem;">
                    <div class="card-body">
                        <img class="card-img-top" src="@item.Image" alt="Card image cap">
                        <div class="card-title-back">
                            <h4 class="card-title">@item.Title</h4>
                        </div>
                    </div>
                </div>
            </a>

        }
    </div>
}
