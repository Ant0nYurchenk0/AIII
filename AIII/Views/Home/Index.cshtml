@model AIII.ViewModels.HomeMovies

<div class="main">
    <h3 class="title">Top Movies</h3>
    <div class="scrollmenu">
        @foreach (var item in Model.PopularMovies)
        {
            <div class="card border-secondary mb-3" style="max-width: 20rem;">
                <div class="card-body">
                    <img class="card-img-top" src="@item.Image" alt="Card image cap">
                    <div class="card-title-back">
                        <h4 class="card-title">@item.Title</h4>
                    </div>
                </div>
            </div>

        }
    </div>
    <h3 class="title">Top TVs</h3>
    <div class="scrollmenu">
        @foreach (var item in Model.PopularTVs)
        {
            <div class="card border-secondary mb-3" style="max-width: 20rem;">
                <div class="card-body">
                    <img class="card-img-top" src="@item.Image" alt="Card image cap">
                    <div class="card-title-back">
                        <h4 class="card-title">@item.Title</h4>
                    </div>
                </div>
            </div>
        }
    </div>
</div>