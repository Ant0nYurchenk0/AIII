@model IEnumerable<AIII.Models.TeamMember>

@{
    ViewBag.Title = "About";
}
<div class="main">

    <div class="container">
        <h1 id="Theteam">Our Team</h1>
        <div class="members row">
            <div class="member col-4">
                <img src="@Model.FirstOrDefault(m => m.Id == 1).Photo" class="memberPhoto">
                <h2 class="member-name">@Model.FirstOrDefault(m => m.Id == 1).Name</h2>
                <span class="member-role">@Model.FirstOrDefault(m => m.Id == 1).Role</span>
            </div>
            <div class="member col-4">
                <img src="@Model.FirstOrDefault(m => m.Id == 2).Photo" class="memberPhoto">
                <h2 class="member-name">@Model.FirstOrDefault(m => m.Id == 2).Name </h2>
                <span class="member-role">@Model.FirstOrDefault(m => m.Id == 2).Role</span>
            </div>
            <div class="member col-4">
                <img src="@Model.FirstOrDefault(m => m.Id == 3).Photo" class="memberPhoto">
                <h2 class="member-name">@Model.FirstOrDefault(m => m.Id == 3).Name</h2>
                <span class="member-role">@Model.FirstOrDefault(m => m.Id == 3).Role</span>
            </div>
        </div>
    </div>
</div>

