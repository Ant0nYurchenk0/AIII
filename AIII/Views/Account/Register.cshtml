@model AIII.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="main">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger center" })

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label center"})
        <div >
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control center" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div >
            @Html.PasswordFor(m => m.Password, new { @class = "form-control center" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control center" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ImdbKey, new { @class = "col-md-2 control-label center" })
        <div>

            @Html.TextBoxFor(m => m.ImdbKey, new { @class = "form-control center" })
        </div>
    </div>
    <p></p>
    <div class="form-group">
        <div>
            <a class="btn btn-primary" href="@Url.Action("Login", "Account")">Log in</a>
            <input type="submit" class="btn btn-secondary center" value="Register" />
        </div>
    </div>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
