<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title AIII - TV</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_NavBar")    
    <div class="container body-content">
        @RenderBody()
        @Html.Partial("_SearchForm")
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        var slider = document.getElementById("imdb-range-min");
        var output = document.getElementById("min-rating");
        output.innerHTML = slider.value;
        slider.oninput = function () {
            output = document.getElementById("min-rating");
            output.innerHTML = this.value;
        }
        var slider1 = document.getElementById("imdb-range-max");
        var output1 = document.getElementById("max-rating");
        output1.innerHTML = slider1.value;
        slider1.oninput = function () {
            output1 = document.getElementById("max-rating");
            output1.innerHTML = this.value;
        }
    </script>

</body>
</html>
