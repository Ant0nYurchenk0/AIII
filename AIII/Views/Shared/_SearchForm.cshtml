@using AIII.Constants
<div class="modal fade" id="search" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @using (Html.BeginForm("Index", "Search", FormMethod.Get))
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-form-label mt-4" for="inputDefault">
                            <input type="text" class="form-control" placeholder="Search Title" name="title">
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label mt-4" for="imdb-range">
                            Min Imdb Rating
                            <span class="show-rating" id="min-rating"></span>
                            <input type="range" class="form-range" min="1.0" max="10" step="0.1" value="1" id="imdb-range-min" name="userRating">
                        </label>
                        <label class="col-form-label mt-4" for="imdb-range">
                            Max Imdb Rating
                            <span class="show-rating" id="max-rating"></span>
                            <input type="range" class="form-range" min="1.0" max="10" step="0.1" value="10" id="imdb-range-max" name="userRating">
                        </label>
                    </div>                    
                    <p></p>
                    <div class="row">
                        <div class="col-4">
                            <p>Genres</p>
                            @foreach (var item in MovieProperties.Genres)
                            {
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" name="genres" value="@item.Value">
                                        @item.Key
                                    </label>
                                </div>
                            }
                        </div>
                        
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            }
        </div>
    </div>
</div>
