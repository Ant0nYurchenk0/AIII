@model AIII.Models.CustomMovie

@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Save", "CustomMovie"))
{
    <table style="width:70%">

        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Title)
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
            </td>

            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Genre)
                    @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
                </div>
            </td>
        </tr>
        
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Type)
                    @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
                </div>
            </td>

            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Year)
                    @Html.TextBoxFor(m => m.Year, "{0:d MMM yyyy}", new { @class = "form-control" })
                </div>
            </td>
        </tr>

        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Country)
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                </div>
            </td>

            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cast)
                    @Html.TextBoxFor(m => m.Cast, new { @class = "form-control" })
                </div>
            </td>
        </tr>

        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.Budget)
                    @Html.TextBoxFor(m => m.Budget, new { @class = "form-control" })
                </div>
            </td>

            <td>
                <div class="form-group">
                    @Html.LabelFor(m => m.BoxOffice)
                    @Html.TextBoxFor(m => m.BoxOffice, new { @class = "form-control" })
                </div>
            </td>
        </tr>

    </table>
    <br />

    <div class="form-group">
        @Html.LabelFor(m => m.Plot)
        @Html.TextAreaFor(m => m.Plot,5, 50, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.MovieId)
    <button type="submit" class="btn btn-primary">Save</button>
}

